# Common Commands
alias md=mkdir

alias ls='ls --color'
alias ll='ls -aFl'
alias la='ls -aF'

# Use ANSI color(-R) and do not clear screen(-X)
alias less='less -RX'

## コピー時にファイルの変更日等の情報も一緒にコピーする
alias cp='cp -p'

# Applications
alias vi=vim
alias v=vim

alias w3m='w3m -B'

alias t=tmux

# Mac
if [ `uname` = 'Darwin' ]; then
  [[ -s "$HOME/.alias/mac" ]] && source $HOME/.alias/mac
fi

# Linux
if [ `uname` = 'Linux' ]; then
  [[ -s "$HOME/.alias/linux" ]] && source $HOME/.alias/linux
fi

# Git
[[ -s "$HOME/.alias/git" ]] && source $HOME/.alias/git

# Ruby
[[ -s "$HOME/.alias/ruby" ]] && source $HOME/.alias/ruby
